<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mediatheque">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mediatheque">
        <activity
            android:name=".ui.movie.AddMovie"
            android:theme="@style/Theme.Mediatheque.NoActionBar" />
        <activity
            android:name=".ui.book.AddBook"
            android:theme="@style/Theme.Mediatheque.NoActionBar" />
        <activity
            android:name=".ui.connection.ResetPasswordActivity"
            android:theme="@style/Theme.Mediatheque.NoActionBar" />
        <activity
            android:name=".ui.connection.RegisterActivity"
            android:theme="@style/Theme.Mediatheque.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Mediatheque.NoActionBar" />
        <activity
            android:name=".ui.connection.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Mediatheque.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>